#!/system/bin/sh

# DHCPv6 Configuration

# Data directory
dhcpv6_data="/data/adb/dhcpv6"

# Binary path
dhcp6c_bin="$dhcpv6_data/bin/dhcp6c"

# Configuration file
dhcp6c_conf="$dhcpv6_data/dhcp6c.conf"

# PID file
pid_file="$dhcpv6_data/run/dhcp6c.pid"

# Log file
log_file="$dhcpv6_data/run/dhcpv6.log"

# Run directory
run_dir="$dhcpv6_data/run"

# DUID file
duid_file="$dhcpv6_data/dhcp6c-duid"

# WiFi interface (usually wlan0)
wifi_interface="wlan0"

# Enable debug logging (1=yes, 0=no)
debug_mode=0

# Max log file size in bytes (1MB)
max_log_size=1048576
